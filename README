CREATE DATABASE ESCOLA;
USE ESCOLA;

CREATE TABLE ALUNO(
NOME VARCHAR(200),
CPF varchar(14),
DATA_NASCIMENTO DATE,
ID_MATRICULA varchar(60),
ID_CURSO int
);

SELECT * FROM ALUNO;

